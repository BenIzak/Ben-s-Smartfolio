#!/usr/bin/env bash

# Define color codes
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Function to print colored messages
print_message() {
    local color=$1
    local message=$2
    echo -e "${color}${message}${NC}"
}

print_message "$BLUE" "ğŸš€ Starting pre-commit checks..."

# Run build
print_message "$YELLOW" "ğŸ—ï¸  Building project..."
if npm run build; then
    print_message "$GREEN" "âœ… Build successful!"
else
    print_message "$RED" "âŒ Build failed. Please fix errors before committing."
    exit 1
fi

# Run type checking
print_message "$YELLOW" "ğŸ” Running type checks..."
if npm run typecheck; then
    print_message "$GREEN" "âœ… Type checking passed!"
else
    print_message "$RED" "âŒ Type checking failed. Please fix type errors before committing."
    exit 1
fi

# Run linter
print_message "$YELLOW" "ğŸ§¹ Running linter..."
if npm run lint; then
    print_message "$GREEN" "âœ… Linting passed!"
else
    print_message "$RED" "âŒ Linting failed. Please fix linting errors before committing."
    exit 1
fi

print_message "$GREEN" "ğŸ‰ All checks passed! Proceeding with commit."
exit 0